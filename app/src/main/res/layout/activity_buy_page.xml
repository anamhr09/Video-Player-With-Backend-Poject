<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.anam_animal.cuteanimals.Buy_Page"
    android:orientation="vertical"
    tools:ignore="SpeakableTextPresentCheck">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/about"
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/about"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <ImageView
            android:id="@+id/shop"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/shop"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/buy_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/tiger_logo"

                />

           <LinearLayout

               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"


               >
               <TextView
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
               android:text="Product Name : "
                   android:textSize="19sp"

               />

               <TextView
                    android:textStyle="bold"
                    android:id="@+id/Name"
                   android:layout_width="match_parent"
                   android:padding="5dp"
                   android:layout_height="wrap_content"
                   android:text="Product Name : "
                   android:gravity="center"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:layout_marginLeft="20dp"
                   />



           </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"


                >
                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Product : "
                    android:textSize="19sp"

                    />

                <TextView
                    android:textColor="#252525"
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="and profile desclients are looking for."
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    />



            </LinearLayout>


            <TextView
                android:id="@+id/Price"
                android:textStyle="bold"
                android:layout_width="200dp"
                android:textColor="@color/white"
                android:padding="3dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Product Title  "
                android:textSize="18sp"
                android:layout_marginTop="10dp"

                />





            <Button
                android:gravity="center"
                android:id="@+id/button"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Buy / More"
                android:backgroundTint="#CE93D8"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="SpeakableTextPresentCheck" />





        </LinearLayout>
    </ScrollView>















</LinearLayout>